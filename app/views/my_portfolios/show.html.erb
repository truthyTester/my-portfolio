<div class="container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag @my_portfolio.main_mage %>
    </div>

    <div class="col-md-5">
      <h1><%= @my_portfolio.title %></h1>

      <hr>

      <em><%= @my_portfolio.subtitle %></em>

      <p><%= @my_portfolio.body %></p>

      <hr>

      <h3>Technologies Used:</h3>

      <% @my_portfolio.technologies.each do | t | %>
      <p><%= t.name %></p>
      <% end %>
    </div>
  </div>
</div>
